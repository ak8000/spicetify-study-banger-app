{
  "compilerOptions": {
    "target": "ES2017",
    "jsx": "react",
    "lib": ["ES6", "DOM", "ES2015", "ScriptHost", "ESNext"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.*"
  ]
}